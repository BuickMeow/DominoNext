<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DominoNext.ViewModels"
        xmlns:views="using:DominoNext.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="DominoNext.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="DominoNext - MIDI Editor">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- 主菜单 -->
		<Menu Grid.Row="0">
			<MenuItem Header="文件">
				<MenuItem Header="新建"/>
				<MenuItem Header="打开"/>
				<MenuItem Header="保存"/>
				<Separator/>
				<MenuItem Header="退出"/>
			</MenuItem>
			<MenuItem Header="编辑">
				<MenuItem Header="撤销"/>
				<MenuItem Header="重做"/>
				<Separator/>
				<MenuItem Header="复制"/>
				<MenuItem Header="粘贴"/>
			</MenuItem>
			<MenuItem Header="视图">
				<MenuItem Header="放大"/>
				<MenuItem Header="缩小"/>
			</MenuItem>
		</Menu>

		<!-- 主工作区 -->
		<DockPanel Grid.Row="1">
			<!-- 工具面板 (左侧) -->
			<Border DockPanel.Dock="Left"
                    Width="200"
                    Background="#ffffff"
                    BorderBrush="#4F4F4F"
                    BorderThickness="0,0,1,0">
				<StackPanel Margin="10">
					<TextBlock Text="工具"
                               Foreground="White"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>
					<Button Content="选择工具"
                            HorizontalAlignment="Stretch"
                            Margin="0,2"/>
					<Button Content="铅笔工具"
                            HorizontalAlignment="Stretch"
                            Margin="0,2"/>
					<Button Content="橡皮擦"
                            HorizontalAlignment="Stretch"
                            Margin="0,2"/>
				</StackPanel>
			</Border>

			<!-- 钢琴卷帘区域 -->
			<views:PianoRollView DataContext="{Binding PianoRoll}"/>
		</DockPanel>
	</Grid>
</Window>